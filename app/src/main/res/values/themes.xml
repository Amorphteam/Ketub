<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ketub" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/onbackground3</item>
        <item name="colorPrimaryVariant">@color/secondary1</item>
        <item name="colorOnPrimary">@color/secondary1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary1</item>
        <item name="colorSecondaryVariant">@color/secondary2</item>
        <item name="colorOnSecondary">@color/onbackground2</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/medium_font</item>
        <item name="android:buttonStyle">@style/medium_font</item>
        <item name="buttonStyle">@style/medium_font</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/title4_text</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:textColorHint">@color/onbackground2</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/background3</item>
        <item name="tabIndicatorColor">@color/secondary1</item>
    </style>

    <style name="ge_dinar_one" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/ge_dinar_one_medium</item>
        <item name="fontFamily">@font/ge_dinar_one_medium</item>
        <item name="android:textColor">@color/onbackground2</item>
    </style>

    <style name="light_font" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/iransans_light</item>
        <item name="fontFamily">@font/iransans_light</item>
        <item name="android:textColor">@color/onbackground2</item>
    </style>

    <style name="bold_font" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/ge_dinar_one_medium</item>
        <item name="fontFamily">@font/ge_dinar_one_medium</item>
    </style>

    <style name="medium_font" parent="@android:style/Widget.TextView">
        <item name="android:lineSpacingExtra">@dimen/line_hight_extra</item>
        <item name="android:fontFamily">@font/ge_dinar_one_light</item>
        <item name="fontFamily">@font/ge_dinar_one_light</item>
    </style>

    <style name="title1" parent="ge_dinar_one">
        <item name="android:textSize">@dimen/title1_text</item>
    </style>

    <style name="title2" parent="ge_dinar_one">
        <item name="android:textSize">@dimen/title2_text</item>
    </style>

    <style name="title3" parent="ge_dinar_one">
        <item name="android:textSize">@dimen/title3_text</item>
    </style>

    <style name="title4" parent="ge_dinar_one">
        <item name="android:textSize">@dimen/title4_text</item>
    </style>

    <style name="body" parent="ge_dinar_one">
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <style name="description" parent="ge_dinar_one">
        <item name="android:textSize">@dimen/description_text</item>
    </style>

    <style name="caption" parent="light_font">
        <item name="android:textSize">@dimen/caption_text</item>
        <item name="android:textColor">@color/onbackground2</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/background3</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/onbackground2</item>
    </style>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/onbackground2</item>
        <item name="chipBackgroundColor">@color/background3</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/onbackground2</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">@style/caption</item>

    </style>

    <style name="SeekBar" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressBackgroundTint">@color/secondary1</item>
        <item name="android:progressTint">@color/secondary1</item>
        <item name="android:colorControlActivated">@color/secondary1</item>
        <item name="android:thumbTint">@color/secondary1</item>
        <item name="tickMark">@drawable/light_tick_mark</item>
    </style>

    <style name="Theme.Ketub.Fullscreen" parent="Theme.Ketub">
        <item name="android:actionBarStyle">@style/Widget.Theme.Ketub.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Ketub.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="Widget.Theme.Ketub.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Ketub.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="PatternBackground">
        <item name="android:background">@drawable/pattern_bg</item>
    </style>


    <style name="TreeNodeStyle">
        <item name="android:paddingRight">0dp</item>
    </style>

</resources>