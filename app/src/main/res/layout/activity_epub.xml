<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.amorphteam.ketub.ui.epub.EpubViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/epub_vertical_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@{viewModel.currentTheme == 0 ? @color/white : @color/onbackground3}"
                android:visibility="@{viewModel.fullScreen == true ? View.GONE : View.VISIBLE}"
                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:background="@{viewModel.currentTheme == 0 ? @color/white : @color/onbackground3}"
                android:orientation="horizontal"
                android:paddingStart="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:visibility="@{viewModel.fullScreen == true ? View.GONE : View.VISIBLE}">


                <TextView
                    style="@style/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.4"
                    android:gravity="center"
                    android:padding="@dimen/normal_margin"
                    android:text="@{viewModel.pageNumber}"
                    android:textColor="@{viewModel.currentTheme == 0 ? @color/onbackground3 : @color/white}" />


                <TextView
                    android:id="@+id/book_name"
                    style="@style/body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.4"
                    android:padding="@dimen/normal_margin"
                    android:text="@{viewModel.bookName}"
                    android:textColor="@{viewModel.currentTheme == 0 ? @color/onbackground3 : @color/white}" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginBottom="120dp"
                android:visibility="@{viewModel.fullScreen == true ? View.GONE : View.VISIBLE}"
                app:cardBackgroundColor="@{viewModel.currentTheme == 0 ? @color/white : @color/onbackground3}"
                app:cardCornerRadius="@dimen/normal_margin"
                app:cardElevation="0dp">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:id="@+id/slider_countiner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:translationZ="90dp">

                    <io.techery.progresshint.addition.widget.VerticalSeekBar
                        android:id="@+id/seekBar"
                        style="@style/SeekBar"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:min="1"
                        android:padding="@dimen/xsmall_margin"
                        app:popupAlwaysShown="false"
                        app:popupDraggable="false"
                        app:popupLayout="@layout/seekbar_layout"
                        app:seekBarRotation="CW90" />
                    <!-- Rotation: CW90 or CW270 -->
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <View
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:focusable="true"
            android:onClick="@{() -> viewModel.onDismissSheet()}"
            android:visibility="gone" />

        <include
            layout="@layout/bottom_sheet_style"
            app:viewModel="@{viewModel}" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>