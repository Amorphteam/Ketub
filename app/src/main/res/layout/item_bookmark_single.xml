<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.amorphteam.ketub.ui.main.tabs.bookmark.model.BookmarkModel" />

        <variable
            name="bookmarkSingleClickListener"
            type="com.amorphteam.ketub.ui.epub.fragments.bookmark.adapter.BookmarkSingleClickListener" />

        <variable
            name="BookmarkDeleteSingleClickListener"
            type="com.amorphteam.ketub.ui.epub.fragments.bookmark.adapter.BookmarkDeleteSingleClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:gravity="center"
        android:onClick="@{() -> bookmarkSingleClickListener.onClick(item)}"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_margin"
            android:background="@android:color/transparent"
            android:onClick="@{() -> BookmarkDeleteSingleClickListener.onClick(item)}"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/delete" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/xsmall_margin"
                android:text="@string/ejtehad_caption"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:bookTitle="@{item}" />

            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/xsmall_margin"
                android:text="@string/nosos_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/description_text"
                app:bookName="@{item}" />
        </LinearLayout>


    </LinearLayout>
</layout>