<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="com.amorphteam.ketub.model.ReferenceModel" />

        <variable
            name="mainTocClickListener"
            type="com.amorphteam.ketub.ui.main.tabs.library.adapter.MainTocClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/small_margin"
        android:onClick="@{() -> mainTocClickListener.onClick(item)}"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/small_margin"
            android:textColor="?attr/colorPrimaryVariant"
            android:layout_height="wrap_content"
            android:text="@string/ejtehad_caption" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/normal_image"
            android:layout_height="@dimen/normal_image"
            android:src="@drawable/ejtihad_logo" />
    </LinearLayout>
</layout>