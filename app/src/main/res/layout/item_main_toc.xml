<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="com.amorphteam.ketub.ui.main.tabs.library.model.MainToc" />

        <variable
            name="mainTocClickListener"
            type="com.amorphteam.ketub.ui.main.tabs.library.adapter.MainTocClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{() -> mainTocClickListener.onClick(item)}"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/large_image"
            android:layout_height="@dimen/large_image"
            android:src="@drawable/ejtehad_cover" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ejtehad_caption" />
    </LinearLayout>
</layout>