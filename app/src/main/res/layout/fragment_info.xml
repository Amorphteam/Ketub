<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.amorphteam.nososejtehad.info.InfoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        style="@style/PatternBackground"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/large_image"
            android:layout_height="@dimen/large_image"
            android:src="@drawable/ejtihad_logo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/xlarge_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ejtehad_title"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ejtehad_caption"
            android:textColor="@color/secondary1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    </LinearLayout>
</layout>